<h1>Listing estudantes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estudantes.each do |estudante| %>
      <tr>
        <td><%= estudante.nome %></td>
        <td><%= link_to 'Show', estudante %></td>
        <td><%= link_to 'Edit', edit_estudante_path(estudante) %></td>
        <td><%= link_to 'Destroy', estudante, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Estudante', new_estudante_path %>
